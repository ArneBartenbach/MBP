<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
 
<tiles-definitions> 
    <!-- Base Definition -->
    <definition name="base-definition">
        <put-attribute name="title" value="Title" />
        <put-attribute name="image-folder" value="/resources/image/" cascade="true" />
       
        <put-attribute name="table-settings" cascade="true"
                       value="/static/dist/js/table-settings.js" />
        <put-attribute name="reload-table" cascade="true"
                       value="/static/dist/js/reload-table.js" />
        
        <put-list-attribute name="topglobaljs">
            <!-- jQuery -->
            <add-attribute value="/static/vendor/jquery/jquery.min.js" />
        </put-list-attribute>        
        <put-list-attribute name="bottomglobaljs">            
            <!-- Bootstrap Core JavaScript -->
            <add-attribute value="/static/vendor/bootstrap/js/bootstrap.min.js" />
            <!-- Metis Menu Plugin JavaScript -->
            <add-attribute value="/static/vendor/metisMenu/metisMenu.min.js" />
            <!-- Custom Theme JavaScript -->
            <add-attribute value="/static/dist/js/sb-admin-2.min.js" />
            <!-- DataTables JavaScript -->
            <add-attribute value="/static/vendor/datatables/js/jquery.dataTables.min.js" />
            <add-attribute value="/static/vendor/datatables-plugins/dataTables.bootstrap.min.js" />
            <add-attribute value="/static/vendor/datatables-responsive/dataTables.responsive.js" />
            <add-attribute value="/static/dist/js/project-settings.js" />
        </put-list-attribute>
        <put-list-attribute name="globalcss">
            <!-- Bootstrap Core CSS -->
            <add-attribute value="/static/vendor/bootstrap/css/bootstrap.min.css" />
            <!-- MetisMenu CSS -->
            <add-attribute value="/static/vendor/metisMenu/metisMenu.min.css" />
            <!-- Template CSS -->
            <add-attribute value="/static/dist/css/sb-admin-2.css" />
            <!-- Custom Fonts -->
            <add-attribute value="/static/vendor/font-awesome/css/font-awesome.min.css" />
            <!-- Custom CSS -->
            <add-attribute value="/static/dist/css/custom.css" />
        </put-list-attribute>
        
    </definition>
    
    <!-- Blank Definition --> 
    <definition name="blank-definition"
                template="/WEB-INF/views/tiles/layouts/blankLayout.jsp"
                extends="base-definition">
        <put-attribute name="header" value="" />
        <put-attribute name="topmenu" value="" />
        <put-attribute name="sidemenu" value="" />
        <put-attribute name="body" value="" />  
        <put-attribute name="footer" value="" />
    </definition>
    
    <!-- Error Page Definition --> 
    <definition name="error-definition"
                template="/WEB-INF/views/tiles/layouts/defaultLayout.jsp"
                extends="base-definition">
        <put-attribute name="header" value="/WEB-INF/views/tiles/template/defaultHeader.jsp" />
        <put-attribute name="topmenu" value="" />
        <put-attribute name="sidemenu" value="" />
        <put-attribute name="body" value="" />  
        <put-attribute name="footer" value="/WEB-INF/views/tiles/template/defaultFooter.jsp" />
    </definition>
    
    <!-- Default Definition -->
    <definition name="default-definition"
                template="/WEB-INF/views/tiles/layouts/defaultLayout.jsp"
                extends="base-definition">
        <put-attribute name="header" value="/WEB-INF/views/tiles/template/defaultHeader.jsp" />
        <put-attribute name="topmenu" value="/WEB-INF/views/tiles/template/defaultMenuTop.jsp" />
        <put-attribute name="sidemenu" value="/WEB-INF/views/tiles/template/defaultMenuSide.jsp" />
        <put-attribute name="body" value="" />  
        <put-attribute name="footer" value="/WEB-INF/views/tiles/template/defaultFooter.jsp" />
    </definition>  
  
    <!-- Home Page -->
    <definition name="index" extends="default-definition">  
        <put-attribute name="title" value="Dashboard" />  
        <put-attribute name="body" value="/WEB-INF/views/pages/index.jsp" />  
        <put-list-attribute name="localjs">
            <add-attribute value="/static/dist/js/reload-table.js" />
        </put-list-attribute>
    </definition>
    
    <!-- Message Page -->
    <definition name="message" extends="default-definition">  
        <put-attribute name="title" value="Message" />
        <put-attribute name="body" value="/WEB-INF/views/pages/message.jsp" />  
    </definition>  
 
    <!-- Location Main Page -->
    <definition name="location" extends="default-definition">  
        <put-attribute name="title" value="Locations" />  
        <put-attribute name="body" value="/WEB-INF/views/pages/location/locations.jsp" />  
    </definition>
    
    <!-- Location Element Page -->
    <definition name="location/id" extends="default-definition">
        <put-attribute name="title" value="Location" />
        <put-attribute name="body" value="/WEB-INF/views/pages/location/location-id.jsp" />  
    </definition>
    
    <!-- Script Main Page -->
    <definition name="script" extends="default-definition">  
        <put-attribute name="title" value="Scripts" />  
        <put-attribute name="body" value="/WEB-INF/views/pages/script/scripts.jsp" />  
    </definition>
    
    <!-- Script Element Page -->
    <definition name="script/id" extends="default-definition">
        <put-attribute name="title" value="Script" />
        <put-attribute name="body" value="/WEB-INF/views/pages/script/script-id.jsp" />  
    </definition>
    
    <!-- Script Raw File Content Page -->
    <definition name="script/id/file/raw" extends="default-definition">
        <put-attribute name="title" value="Raw File" />
        <put-attribute name="body" value="/WEB-INF/views/pages/script/script-raw.jsp" />  
    </definition>
    
    <!-- Device Main Page -->
    <definition name="device" extends="default-definition">  
        <put-attribute name="title" value="Devices" />  
        <put-attribute name="body" value="/WEB-INF/views/pages/device/devices.jsp" />  
    </definition>
    
    <!-- Device Element Page -->
    <definition name="device/id" extends="default-definition">
        <put-attribute name="title" value="Device" />
        <put-attribute name="body" value="/WEB-INF/views/pages/device/device-id.jsp" />  
    </definition>
    
    <!-- Sensor Main Page -->
    <definition name="sensor" extends="default-definition">  
        <put-attribute name="title" value="Sensors" />  
        <put-attribute name="body" value="/WEB-INF/views/pages/sensor/sensors.jsp" />  
    </definition>
    
    <!-- Sensor Element Page -->
    <definition name="sensor/id" extends="default-definition">
        <put-attribute name="title" value="Sensor" />
        <put-attribute name="body" value="/WEB-INF/views/pages/sensor/sensor-id.jsp" />  
    </definition>
    
    <!-- MQTT Table Dynamic Sub-Page -->
    <definition name="mqtt" extends="blank-definition">
        <put-attribute name="body" value="/WEB-INF/views/pages/mqtt/mqtt.jsp" />
    </definition>
    
    <!-- MQTT Table ID Dynamic Sub-Page -->
    <definition name="mqtt-id" extends="blank-definition">
        <put-attribute name="body" value="/WEB-INF/views/pages/mqtt/mqtt-id.jsp" />
    </definition>
    
    <!-- Default Error Handler Page -->
    <definition name="error" extends="default-definition">
        <put-attribute name="title" value="Error" />
        <put-attribute name="body" value="/WEB-INF/views/pages/error/default.jsp" />  
    </definition>
                            
    <!-- Not Found Handler Page -->
    <definition name="error/404" extends="default-definition">
        <put-attribute name="title" value="Page Not Found" />
        <put-attribute name="body" value="/WEB-INF/views/pages/error/404.jsp" />  
    </definition>
    
    <!-- Bad Request Handler Page -->
    <definition name="error/400" extends="default-definition">
        <put-attribute name="title" value="Bad Request" />
        <put-attribute name="body" value="/WEB-INF/views/pages/error/400.jsp" />  
    </definition>
</tiles-definitions>